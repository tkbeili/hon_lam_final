<h1>Database results!</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th></th>
		<th></th>

	</tr>
	<% @contacts.each do |contact| %>
	<tr>
		<td><%= contact.name %></td>
		<td><%= contact.email %></td>
		<td><a href="details/<%= contact.id %>">Show!</a></td>
		<td>
			<form method="post" action="/contact/<%= contact.id %>">
				<input type="hidden" name="_method" value="delete">
				<input type="submit" value="Delete!">
			</form>
		</td>
	</tr>
	<% end %>
</table>